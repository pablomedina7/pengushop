<%- include('../layouts/layout') { title: "Productos", body: ejs.render(`
    <h2>Lista de Productos</h2>
    <% if (error) { %>
    <p style="color:red;"><%= error %></p>
    <% } %>
    <a href="/admin/products/create">Crear Nuevo Producto</a>
    <table border="1">
        <tr>
        <th>Nombre</th>
        <th>Descripci√≥n</th>
        <th>Precio</th>
        <th>Acciones</th>
        </tr>
    <% products.forEach(product => { %>
        <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td>$ <%= product.price %></td>
        <td>
            <form action="/admin/products/edit/<%= product._id %>" method="GET" style="display:inline;">
            <button type="submit">Editar</button>
            </form>
            <form action="/admin/products/delete/<%= product._id %>" method="POST" style="display:inline;">
            <button type="submit">Eliminar</button>
            </form>
        </td>
        </tr>
    <% }) %>
    </table>
`) } %>
